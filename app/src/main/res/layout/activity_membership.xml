<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/membership_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".invest.Membership.MembershipActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/splash" />

    <ScrollView
        android:layout_marginTop="130dp"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner"
                android:layout_marginTop="15dp"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:entries="@array/salutation" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginStart="3dp"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Full Name"
                    android:background="#FFFFFF"
                    android:inputType="textAutoComplete"
                    android:maxLines="1"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:layout_width="200dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Company"
                    android:background="#FFFFFF"
                    android:inputType="textAutoComplete"
                    android:maxLines="1"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/companysize"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company Size"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#FFFFFF"/>
                <Spinner
                    android:layout_marginTop="20dp"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="#FFFFFF"
                    android:entries="@array/companysize" />

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/designation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Designation"
                    android:background="#FFFFFF"
                    android:inputType="textAutoComplete"
                    android:maxLines="1"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <Spinner
                android:layout_marginTop="10dp"
                android:id="@+id/industry"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="#FFFFFF"
                android:entries="@array/industry" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/nob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nature of Business"
                    android:background="#FFFFFF"
                    android:inputType="textAutoComplete"
                    android:maxLines="1"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <Spinner
                android:layout_marginTop="10dp"
                android:id="@+id/affliation"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="#FFFFFF"
                android:entries="@array/affliation" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/coo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Country of Origin"
                    android:background="#FFFFFF"
                    android:inputType="textAutoComplete"
                    android:maxLines="1"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <EditText
                android:id="@+id/email"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:background="#FFFFFF"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:autofillHints="Email" />

            <EditText
                android:id="@+id/Mobile"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:background="#FFFFFF"
                android:hint="Mobile"
                android:inputType="phone"/>

            <EditText
                android:id="@+id/Landline"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:background="#FFFFFF"
                android:hint="Land Line"
                android:inputType="phone"/>

            <TextView
                android:id="@+id/acttext"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Average Company Turnover"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#FFFFFF"/>

            <Spinner
                android:layout_marginTop="10dp"
                android:id="@+id/act"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="#FFFFFF"
                android:entries="@array/act" />

            <TextView
                android:id="@+id/dobtext"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Of Birth"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#FFFFFF"/>

            <EditText
                android:id="@+id/dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:ems="10"
                android:inputType="date"
                android:importantForAutofill="no" />

            <TextView
                android:id="@+id/UploadPhoto"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Photo"
                android:clickable="true"
                android:focusable="true"
                android:background="@color/gold"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#FFFFFF"/>

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/placeholder"
                android:id="@+id/iv"/>

            <TextView
                android:layout_width="150dp"
                android:textColor="#FFFFFF"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:text="REGISTER"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </ScrollView>




</android.support.constraint.ConstraintLayout>