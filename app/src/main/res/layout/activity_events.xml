<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"

    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="25sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:id="@+id/upcomingIv"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_gravity="center"/>

            <diplomatssummit.com.diplomatssummit.app_ui.GalleryRecyclerView
                android:layout_marginTop="20dp"
                android:id="@+id/upcomingRv"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:helper="LinearSnapHelper" />

            <diplomatssummit.com.diplomatssummit.app_ui.Indicators.IndefinitePagerIndicator
                android:id="@+id/upcomingIndicator"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                app:dotColor="@color/colorPrimary"
                app:selectedDotColor="@color/gold"
                app:dotRadius="5dp"
                app:selectedDotRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="25sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:id="@+id/pastIv"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_gravity="center" />


            <diplomatssummit.com.diplomatssummit.app_ui.GalleryRecyclerView
                android:layout_marginTop="20dp"
                android:id="@+id/pastRv"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:helper="LinearSnapHelper" />


            <diplomatssummit.com.diplomatssummit.app_ui.Indicators.IndefinitePagerIndicator
                android:id="@+id/pastIndicator"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                app:dotColor="@color/colorPrimary"
                app:selectedDotColor="@color/gold"
                app:dotRadius="5dp"
                app:selectedDotRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="25sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:id="@+id/t_times_iv"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:textAlignment="center"
                android:layout_gravity="center" />


            <diplomatssummit.com.diplomatssummit.app_ui.GalleryRecyclerView
                android:layout_marginTop="20dp"
                android:id="@+id/t_times_rv"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:helper="LinearSnapHelper" />


            <diplomatssummit.com.diplomatssummit.app_ui.Indicators.IndefinitePagerIndicator
                android:id="@+id/t_times_indicator"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                app:dotColor="@color/colorPrimary"
                app:selectedDotColor="@color/gold"
                app:dotRadius="5dp"
                app:selectedDotRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>