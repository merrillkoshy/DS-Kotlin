<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:layout_marginTop="100dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="25sp"
        android:layout_marginTop="100dp"
        android:textAlignment="center"
        android:clickable="true"
        android:focusable="true"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/sample_pager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:listitem="@layout/layout_sample_pager"/>

    <com.tbuonomo.viewpagerdotsindicator.SpringDotsIndicator
        android:id="@+id/spring_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/sample_pager"
        android:layout_alignEnd="@+id/sample_pager"
        android:layout_marginStart="99dp"
        android:layout_marginTop="430dp"
        android:layout_marginEnd="97dp"
        app:dampingRatio="0.5"
        app:dotsColor="@color/colorPrimary"
        app:dotsCornerRadius="20dp"
        app:dotsSize="16dp"
        app:dotsSpacing="6dp"
        app:dotsStrokeWidth="2dp"
        app:stiffness="300">

    </com.tbuonomo.viewpagerdotsindicator.SpringDotsIndicator>



    <Button
        android:id="@+id/switcher"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="460dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_nextbtn"/>


    <TextView
        android:id="@+id/tv2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textSize="25sp"

        android:layout_marginTop="570dp"
        android:layout_alignParentEnd="true"
        android:textAlignment="viewEnd"/>


</RelativeLayout>
