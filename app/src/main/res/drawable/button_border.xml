<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <rotate android:fromDegrees="60" android:toDegrees="45" android:pivotX="40%" android:pivotY="87%" >
            <shape android:shape="rectangle" >
                <gradient android:startColor="#350000"
                    android:centerColor="#ff3d2e"
                    android:endColor="#350000"
                    android:angle="90" />
                <corners android:radius="3dp" />
                <stroke android:color="#350000" android:width="10dp"/>

            </shape>
        </rotate>
    </item>
</layer-list>
